<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="activist_app.Events">
    <ScrollView>
        <VerticalStackLayout>

            <Frame BackgroundColor="Black" HorizontalOptions="CenterAndExpand" CornerRadius="300" HeightRequest="300" WidthRequest="1080" Margin="0, -200, 0, 0">
                <Label Text="Мероприятия" TextColor="White" VerticalTextAlignment="End" HorizontalTextAlignment="Center" FontFamily="Gillroy" FontAttributes="Bold" FontSize="50"></Label>
            </Frame>

            <Label Text="название мероприятия" TextColor="Black" FontSize="15" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" HorizontalOptions="Center" VerticalOptions="Center" FontFamily="Gillroy" FontAttributes="Bold" Margin="60"></Label>
            <ImageButton x:Name="Event" WidthRequest="170" HeightRequest="50" CornerRadius="25" Clicked="Event_Clicked"></ImageButton>


        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>